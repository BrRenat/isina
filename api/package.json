{
  "name": "isina-api",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "nodemon index.js --exec babel-node --presets es2015,stage-2",
    "test": "cross-env NODE_ENV=test jest --coverage"
  },
  "author": "Renat Berezovsky <renat0014@gmail.com>",
  "babel": {
    "env": {
      "test": {
        "presets": [
          [
            "es2015",
            {
              "modules": false
            }
          ],
          "stage-0"
        ],
        "plugins": [
          "transform-es2015-modules-commonjs"
        ]
      }
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/tests.{js,jsx}",
      "!src/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 98,
        "branches": 91,
        "functions": 98,
        "lines": 98
      }
    },
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "testRegex": "tests/.*\\.test\\.js$"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.20.0",
    "babel-eslint": "^8.2.1",
    "babel-plugin-syntax-async-functions": "^6.13.0",
    "babel-plugin-transform-regenerator": "^6.20.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "cross-env": "^5.1.3",
    "eslint": "^4.15.0",
    "eslint-plugin-jest": "^21.7.0",
    "jest": "^22.1.4",
    "nodemon": "^1.14.11"
  },
  "dependencies": {
    "apollo-server-express": "^1.3.2",
    "babel-preset-stage-2": "^6.24.1",
    "body-parser": "^1.15.2",
    "cors": "^2.8.4",
    "express": "^4.14.0",
    "graphql": "^0.8.2",
    "graphql-tools": "^2.18.0",
    "mongodb": "^2.2.15",
    "validator": "^9.2.0"
  }
}
